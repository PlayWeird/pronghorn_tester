Bootstrap: docker
From: python:3.9-slim

%labels
    Author gevangelista
    Version v1.0
    Description Python 3.9 container for Pronghorn HPC

%help
    This container provides Python 3.9 with common scientific computing packages.
    Usage: singularity run python.sif script.py

%post
    # Update and install system dependencies
    apt-get update && apt-get install -y \
        build-essential \
        gfortran \
        libopenblas-dev \
        liblapack-dev \
        wget \
        curl \
        && rm -rf /var/lib/apt/lists/*
    
    # Upgrade pip
    pip install --upgrade pip
    
    # Install common Python packages
    pip install \
        numpy==1.24.3 \
        scipy==1.10.1 \
        pandas==2.0.3 \
        matplotlib==3.7.2 \
        scikit-learn==1.3.0 \
        jupyter==1.0.0 \
        ipython==8.14.0 \
        h5py==3.9.0 \
        mpi4py==3.1.4
    
    # Create directories
    mkdir -p /data /workspace /scratch

%environment
    export PYTHONPATH=/workspace:$PYTHONPATH
    export OMP_NUM_THREADS=1
    export OPENBLAS_NUM_THREADS=1
    export MKL_NUM_THREADS=1

%runscript
    echo "Python container for Pronghorn HPC"
    echo "Python version: $(python --version)"
    exec python "$@"